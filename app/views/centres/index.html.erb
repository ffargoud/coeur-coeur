     <% if false %>
        <%= cl_image_tag centre.photo.key %>
        <% else %>
        <%= image_tag "https://res.cloudinary.com/dnie1qfbq/image/upload/v1582631708/samples/food/pot-mussels.jpg", height: 300, width: 400, crop: :fill %>
        <% end %>
      <div class="centre-card-info">
        <div>
          <h2 class='centre-name'><%= centre.name %></h2>
          <p> <%= centre.adresse %></p>
        </div>
      </div>
    <% end %>
  <% end %>
